{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Mindset Governance Proposal Entry",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "id",
    "timestamp",
    "proposedChangeSummary",
    "triggeringChecks",
    "status"
  ],
  "properties": {
    "id": {
      "type": "string",
      "minLength": 1
    },
    "timestamp": {
      "type": "string",
      "format": "date-time"
    },
    "proposedChangeSummary": {
      "type": "string",
      "minLength": 1
    },
    "triggeringChecks": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "status": {
      "type": "string",
      "enum": [
        "pending",
        "approved",
        "rejected",
        "rolled_back"
      ]
    }
  }
}
