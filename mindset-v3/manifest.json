{
  "manifest_version": 3,
  "name": "Mindset",
  "version": "0.1.0",
  "description": "Mindset helps you see the shape of your information landscape.",
  "permissions": [
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "Mindset",
    "default_popup": "popup.html"
  }
}
