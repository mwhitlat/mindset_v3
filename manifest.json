{
  "manifest_version": 3,
  "name": "Mindset - Digital Diet Tracker",
  "version": "1.0.0",
  "description": "Privacy-first browser extension that helps you understand your digital consumption patterns",
  
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "scripting",
    "notifications"
  ],
  
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; style-src 'self' 'unsafe-inline';"
  },
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js", "browser-status-indicator.js"],
      "run_at": "document_end"
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Mindset - Your Digital Diet"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["dashboard.html", "dashboard.js", "dashboard.css"],
      "matches": ["<all_urls>"]
    }
  ]
} 